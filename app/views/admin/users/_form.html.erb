<%= semantic_form_for [:admin, @user], :validate => true do |f| %>
  <%= f.inputs "User Details" do %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password  %>
    <%= f.input :password_confirmation %>
    <%= f.input :confirmed_at, :as => :hidden,:value => Time.now() if(controller.action_name == 'new') %>
  <% end %>

<%= f.actions do %>
  <%= f.action :submit %>
  <li class="cancel"><%= link_to "Cancel", '/admin/users' %></li>
<% end %>
<% end %>
